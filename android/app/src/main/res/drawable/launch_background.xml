<?xml version="1.0" encoding="utf-8"?>
<!-- Native Android Splash Screen -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background gradient similar to Flutter splash -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#FFF8E1"
                android:endColor="#FFE4B5"
                android:type="linear" />
        </shape>
    </item>

    <!-- App icon in center (using launcher icon) -->
    <item>
        <bitmap
            android:gravity="center"
            android:src="@mipmap/ic_launcher" />
    </item>
</layer-list>
